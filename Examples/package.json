{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "npx lerna run --stream dist:dev && npx lerna run --stream dev:build && yarn clean && yarn copy:all:widgets",
    "copy:all:widgets": "run-p copy:*",
    "copy:covid-by-location": "npx ncp ./Widgets/CovidByLocation/dist ./docs/CovidByLocation && npx ncp ./Widgets/CovidByLocation/build ./docs/CovidByLocation/app",
    "copy:crm": "npx ncp ./Widgets/CRM/dist ./docs/CRM && npx ncp ./Widgets/CRM/build ./docs/CRM/app",
    "copy:hospital-bed-capacity": "npx ncp ./Widgets/HospitalBedCapacity/dist ./docs/HospitalBedCapacity && npx ncp ./Widgets/HospitalBedCapacity/build ./docs/HospitalBedCapacity/app",
    "copy:learning-widget-sample": "npx ncp ./Widgets/LearningWidgetSample/dist ./docs/LearningWidgetSample && npx ncp ./Widgets/LearningWidgetSample/build ./docs/LearningWidgetSample/app",
    "copy:map": "npx ncp ./Widgets/Map/dist ./docs/Map && npx ncp ./Widgets/Map/build ./docs/Map/app",
    "copy:rss": "npx ncp ./Widgets/RSS/dist ./docs/RSS && npx ncp ./Widgets/RSS/build ./docs/RSS/app",
    "copy:timer": "npx ncp ./Widgets/Timer/dist ./docs/Timer && npx ncp ./Widgets/Timer/build ./docs/Timer/app",
    "copy:momentum-css": "npx ncp ./Widgets/CRM/node_modules/@momentum-ui/core/css ./docs/css && npx ncp ./Widgets/CRM/node_modules/@momentum-ui/icons/fonts ./docs/fonts && npx ncp ./Widgets/CRM/node_modules/@momentum-ui/icons/css ./docs/css && npx ncp ./Widgets/CRM/node_modules/@momentum-ui/core/fonts ./docs/fonts",
    "clean": "rimraf ./docs/CovidByLocation ./docs/CRM ./docs/HospitalBedCapacity ./docs/LearningWidgetSample ./docs/Map ./docs/RSS ./docs/Timer"
  },
  "devDependencies": {
    "copy-dir": "^1.3.0",
    "copyfiles": "^2.4.1",
    "lerna": "^4.0.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
